# DBMCP Environment Configuration
ENVIRONMENT={{ environment }}
AWS_DEFAULT_REGION={{ aws_region }}

# Database Configuration
USE_PARAMETER_STORE=true
DATABASE_URL_PARAMETER=/{{ environment }}/dbmcp/database_url

# Security Configuration
JWT_SECRET_PARAMETER=/{{ environment }}/dbmcp/jwt_secret

# Application Configuration
FASTAPI_PORT={{ fastapi_port }}
MCP_PORT={{ mcp_port }}

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://{{ ansible_host }},https://dbmcp.opsloom.io

# Docker Images
FASTAPI_IMAGE={{ fastapi_image }}
MCP_IMAGE={{ mcp_image }}