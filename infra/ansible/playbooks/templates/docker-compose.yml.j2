version: '3.8'

services:
  fastapi:
    image: {{ fastapi_image }}
    container_name: dbmcp-fastapi
    restart: unless-stopped
    ports:
      - "{{ fastapi_port }}:8000"
    environment:
      - ENVIRONMENT={{ app_environment }}
      - DATABASE_URL_PARAMETER=/{{ app_environment }}/dbmcp/database_url
      - USE_PARAMETER_STORE=true
      - JWT_SECRET_PARAMETER=/{{ app_environment }}/dbmcp/jwt_secret
      - AWS_DEFAULT_REGION={{ aws_region }}
      - LOG_LEVEL=info
      - CORS_ALLOWED_ORIGINS=https://{{ ansible_host }},https://dbmcp.opsloom.io
    volumes:
      - {{ log_dir }}/fastapi:/app/logs
    networks:
      - dbmcp-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/dbmcp/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  mcp:
    image: {{ mcp_image }}
    container_name: dbmcp-mcp
    restart: unless-stopped
    ports:
      - "{{ mcp_port }}:4200"
    environment:
      - ENVIRONMENT={{ app_environment }}
      - DATABASE_URL_PARAMETER=/{{ app_environment }}/dbmcp/database_url
      - USE_PARAMETER_STORE=true
      - JWT_SECRET_PARAMETER=/{{ app_environment }}/dbmcp/jwt_secret
      - AWS_DEFAULT_REGION={{ aws_region }}
      - LOG_LEVEL=info
      - TRANSPORT=http
    volumes:
      - {{ log_dir }}/mcp:/app/logs
    networks:
      - dbmcp-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:4200/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

networks:
  dbmcp-network:
    driver: bridge