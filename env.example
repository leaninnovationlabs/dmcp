# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./dmcp.db

# Security
# Generate a secure random key using: openssl rand -hex 32. SECRET_KEY is REQUIRED and must be at least 32 characters long
SECRET_KEY=

# JWT Configuration
JWT_SECRET_KEY=jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO

# CORS, add your frontend url here if its served from a different port and domain
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# MCP Server Configuration
MCP_TRANSPORT=http
MCP_HOST=127.0.0.1
MCP_PORT=8000
MCP_PATH=/dmcp
MCP_LOG_LEVEL=debug